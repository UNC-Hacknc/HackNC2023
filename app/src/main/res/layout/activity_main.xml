<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Hi John Doe!"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Activities"
        android:textColor="#FF0000"
        android:padding="8dp"
        android:textSize="20sp"
        android:background="#CCCCCC" />

    <ListView
        android:id="@+id/listActivities"
        android:layout_width="match_parent"
        android:layout_height="316dp"></ListView>

    <!-- Weather forecast -->
    <TextView
        android:id="@+id/textWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather Forecast: Sunny"
        android:textSize="13pt"
        android:layout_below="@id/listActivities"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="8dp" />

        <Button
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="Upcoming Activities"
            android:textSize="10dp"
            android:layout_weight="1"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add activity"
            android:textSize="10dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:onClick="beginForm"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Profile"
            android:textSize="8dp" />

    </LinearLayout>

</LinearLayout>